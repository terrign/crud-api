{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "target": "ES2023",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "lib": ["es2023"],
    "importHelpers": true,
    "types": ["node", "jest"],
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
